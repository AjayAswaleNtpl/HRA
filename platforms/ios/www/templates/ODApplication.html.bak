<ion-view>
    <ion-nav-bar class="bar-stable" style="background-color: white">
        <ion-nav-buttons side="left">
            <button class="button button-clear" ng-click="redirectOnTabOd()" >
                <i class="icon ion-ios-arrow-back"></i>
                Back</button>
        </ion-nav-buttons>
    </ion-nav-bar>
    <div class="bar bar-footer hide-on-keyboard-open" style="background-color:#000; background-size: 100% 0px;">
        <div class="title" style="height: 20px;">
            <h6 style="font-size: 0.5em;color:#fff;margin-top: 5px;height: 10px; margin-bottom: 5px;" >Powered by HR Align</h6></div>
    </div>
    <ion-content has-bouncing="false"  class="item-divider grayBackColor" style="overflow-y: auto;top:44px;">
		<div class="custom-header" style="padding: 0px;padding-left: 15px;margin-top:-8px;">
         <h4 class="custom-header" style="padding-top:5px;"><b>OD Application</b></h4>
        </div>
        <form name="credentialsForm" >
            <div class="card">
                <div class="item item-input">
                    <span class="input-label" style="min-width: 40%; margin-left: -10px;"><b>From Date</b> </span>
                    <input id="fromDate" ng-click="setFromDate()" style="padding-left: 0px;padding-right:0px;background-color:white;border: 1px solid #b3b3b3;text-align:center; width:120px;" type="text"   ng-model="resultObj.leaveODFromDate" ng-readonly="true" required/>
                    <i style="padding-left: 5%; font-size: 193%;" ng-click="setFromDate()" class="ion-calendar">&emsp;</i>
                </div>
            </div>

            <div class="card">
                <div class="item item-input">
                    <span class="input-label" style="min-width: 40%; margin-left: -10px;"><b>To Date </b></span>
                    <input id="toDate" ng-click="setToDate()" style="padding-left: 0px;padding-right:0px;background-color:white;border: 1px solid #b3b3b3;
					text-align:center; width:120px;" type="text"  ng-model="resultObj.leaveODToDate" ng-readonly="true" required />
                    <i style="padding-left: 5%; font-size: 193%;" ng-click="setToDate()" class="ion-calendar">&emsp;</i>
                </div>
            </div>

            <b style=" font-size: 16px; margin-left: 15px; ">From Place</b>
            <label class="card item item-input leave-box-shadow leave-border-radius" style="margin-top: 3px;background-color:white;border: 1px solid #b3b3b3;">
                <textarea name="txt" ng-model="resultObj.fromPlace" maxlength="100" required=""></textarea>
            </label>
            

            <b style=" font-size: 16px; margin-left: 15px; ">To Place</b>
            <label class="card item item-input leave-box-shadow leave-border-radius" style="margin-top: 3px;background-color:white;border: 1px solid #b3b3b3;">
                <textarea name="txts" ng-model="resultObj.toPlace" maxlength="100" required=""></textarea>
            </label>
            

            <div style=" padding-left: 10px; width: 100%;  padding-right: 10px;">
                <div class="item item-input" >
                    <span class="input-label" style="min-width: 32%; margin-left: -10px;"><b> In Time</b></span>
                    <input id="toDate" ng-click="setInTime()" style="padding-left: 5px;background-color:white;border: 1px solid #b3b3b3;" type="text"  ng-model="resultObj.inTime" ng-readonly="true" required />
                    <i style="padding-left: 3%; font-size: 193%;" ng-click="setInTime()" class="ion-clock">&emsp;</i>
                </div>
            </div>

            <div style=" padding-left: 10px; width: 100%;  padding-right: 10px;">
                <div class="item item-input" >
                    <span class="input-label" style="min-width: 32%; margin-left: -10px;"><b> Out Time</b></span>
                    <input id="toDate" ng-click="setOutTime()" style="padding-left: 5px;background-color:white;border: 1px solid #b3b3b3;" type="text"  ng-model="resultObj.outTime" ng-readonly="true" required />
                    <i style="padding-left: 3%; font-size: 193%;" ng-click="setOutTime()" class="ion-clock">&emsp;</i>
                </div>
            </div>

            <div class="card ">
                <div class="item item-input item-select">
                    <div class="input-label " style="margin-left: -10px;">
                       <b>Purpose</b>
                    </div>
                    <select id="members" class = "form-control" name="LeaveType" ng-model = "resultObj.purpose" required>
                        <option value="">Please Select</option>
                        <option value="Client Visit">Client Visit</option>
                        <option value="Official Visit">Official Visit</option>
                        <option value="Training">Training</option>
                        <option value="Conference">Conference</option>
                        <option value="Seminar">Seminar</option>
                        <option value="Others">Others</option>
                    </select>
                </div>
            </div>
            <div class="grayBackColor">
                <b style=" font-size: 16px; margin-left: 15px; ">Applicant Remarks</b>
                <label class="card item item-input leave-box-shadow leave-border-radius" style="margin-top: 3px;background-color:white;border: 1px solid #b3b3b3;">
                    <textarea name="txt3" ng-model="resultObj.remarks" maxlength="150" required=""></textarea>
                </label>
				<div class="item">
                    <label class="grayBackColor" ng-if="fileUploadFeatureIncluded=='true'">
							<div class="row" >
								<input col="col-20" type="radio"  value="fileRadio" checked="checked"  
								style="margin-right: 3%; margin-top: 4%;" value="file" ng-change="typeAttach('file');" ng-model="selectedValues.typeAttach"/>
								<input col="col-80" type="file" name="inputFileUpload" id="inputFileUpload"  
								ng-model="somemodel"  />
							</div>
							<div class="row" >
								<input col="col-20"   type="radio"  value="cameraRadio"
								style="margin-right: 3%; margin-top: 4%;" value="camera" ng-change="typeAttach('camera');" ng-model="selectedValues.typeAttach"/>
								<button col="col-80" id="btncamera"  Style="text-align: left;
									margin-bottom:0%;" on-tap="cameraTakePicture('camera');">
									<b> Take Picture &nbsp;&nbsp; </b>
								</button>
							</div>
							<img class="col-30" id="showImg" 
								style="width:50px;height:50px;visibility:hidden;margin-left:2px;"
								src="" on-tap="removeAttachment()">
							</img>
                        
                    </label>
                    
                </div>                
            </div>
			<label class="grayBackColor">
                        <button class="button button-block button-positive" ng-disabled="credentialsForm.$invalid" ng-click="sendConform('SENT FOR APPROVAL')"  >Send For Approval</button>
             </label>
        </form><br>
		
			
			

    </ion-content>
</ion-view>
